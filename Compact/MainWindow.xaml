<Window x:Name="window" x:Class="Compact.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Compact"
        mc:Ignorable="d" Height="700" Width="1160" Loaded="OnWindowLoad" AllowsTransparency="True" WindowStyle="None" Background="#FFEEEEEE">
    <Grid>
        <WrapPanel x:Name="bundlePanel" Margin="10,0,10,10" Height="635" VerticalAlignment="Bottom"/>
        <Canvas HorizontalAlignment="Left" Height="45" VerticalAlignment="Top" Width="1160" Background="#FF363636">
            <Label Content="Compact" Canvas.Left="11" Canvas.Top="5" Foreground="White" FontSize="18"/>
            <Button x:Name="btnExit" Content="X" Canvas.Left="1115" Width="46" Height="46" BorderBrush="{x:Null}" Foreground="#FFA8A8A8" Background="#FF292929" Canvas.Top="-1" FontSize="16" Click="btnExit_Click"/>
        </Canvas>
    </Grid>
</Window>
