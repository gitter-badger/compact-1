<Window x:Class="Compact.Windows.DetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Compact.Windows"
        mc:Ignorable="d"
        Title="Bundle Details" Height="503" Width="360" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Canvas x:Name="bannerCanvas" HorizontalAlignment="Left" Height="90" VerticalAlignment="Top" Width="350" Background="#FF262626"/>
        <Label Content="This bundle includes:" HorizontalAlignment="Left" Margin="10,107,0,0" VerticalAlignment="Top" FontSize="24"/>
        <ListBox x:Name="lstSoftware" Height="264" Margin="20,153,20,0" VerticalAlignment="Top"/>
        <Button x:Name="btnInstall" Content="Install this bundle" HorizontalAlignment="Left" Margin="204,0,0,10" VerticalAlignment="Bottom" Width="128" Height="31"/>

    </Grid>
</Window>
